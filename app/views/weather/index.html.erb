<div class="container min-h-screen flex flex-col items-center">
  <div class="w-full max-w-4xl mx-auto pt-8">
    <header class="mb-8 w-full flex justify-center md:justify-start">
      <h1 class="text-4xl font-extrabold tracking-tight text-blue-700 drop-shadow-sm">Forecastly</h1>
    </header>
    <div class="flex items-center flex-row justify-center md:justify-start space-x-4 pb-6">
      <%= form_with url: weather_search_path, method: :get, data: { turbo_frame: "forecast" } do |f| %>
        <%= f.text_field :address, value: @address, placeholder: "Search address...", class: "rounded px-2 py-1 border border-gray-300" %>
        <%= f.submit "Search", class: "ml-2 px-4 py-1 rounded bg-yellow-200 hover:bg-yellow-300 cursor-pointer" %>
      <% end %>
    </div>
    <div data-controller="loading">
      <div data-loading-target="spinner" class="hidden">
        <div class="flex justify-center items-center py-12">
          <div class="animate-spin rounded-full h-10 w-10 border-2 border-t-transparent mr-2"></div>
          <span class="text-black-600 text-lg font-semibold">Loading forecastâ€¦</span>
        </div>
      </div>
      <%= turbo_frame_tag "forecast", data: { "loading-target": "forecast" } do %>
        <div class="text-center text-gray-400 py-12 italic text-lg">
          Enter a city in US to get the current weather and forecast!
        </div>
      <% end %>
    </div>
  </div>
</div>