<div class="flex items-center justify-between py-10">
  <div class="text-8xl font-bold flex-shrink-0"  data-controller="temperature" data-temperature-value="<%= @current[:temp] %>">
    <span data-temperature-target="value"><%= @current[:temp] %></span>Â°
    <span class="ml-2 text-2xl font-semibold">
      <%= link_to "F", "#", class: "underline", data: { action: "temperature#toF", temperature_target: "f" } %> |
      <%= link_to "C", "#", data: { action: "temperature#toC", temperature_target: "c" } %>
    </span>
  </div>
  <div class="flex-1 ml-10">
    <h1 class="text-3xl font-bold mb-2">
      <%= @city %>
    </h1>
    <h2 class="text-2xl font-bold mb-2"><%= @current[:weekday] %></h2>
    <div class="flex space-x-8 flex-shrink-0 mb-2">
      <span class="text-lg"><%= @current[:description] %></span>
      <% if @from_cache %>
        <span class="inline-block px-3 rounded-full bg-yellow-100 text-yellow-800 font-semibold align-middle">
          Cached
        </span>
      <% end %>
    </div>
    <div class="flex space-x-8 text-md text-gray-600">
      <div>Humidity: <%= @current[:humidity] %>%</div>
      <div>Wind: <%= @current[:wind] %></div>
    </div>
  </div>
</div>