<div class="mb-8">
  <div class="flex flex-col md:flex-row items-start md:items-center gap-8 mb-6">
    <div class="text-left">
      <span id="<%= @current[:weekday] %>"
          data-original="<%= @current[:temp] %>"
          data-temperature-target="value"
          class="text-8xl font-light text-gray-800 mb-2">
        <span><%= @current[:temp] %></span>
      </span>
      <span class="text-gray-600 text-lg">
        <%= link_to "F", "#", class: "hover:underline underline", data: { action: "temperature#toF", temperature_target: "f" } %> |
        <%= link_to "C", "#", class: "hover:underline", data: { action: "temperature#toC", temperature_target: "c" } %>
      </span>
    </div>
    <div class="flex-1 text-left">
      <h3 class="text-2xl font-semibold text-gray-800 mb-1"><%= @city %></h3>
      <p class="text-lg text-gray-600 mb-2"><%= @current[:weekday] %></p>
      <div class="flex items-center gap-2 mb-2">
        <span class="text-gray-700"><%= @current[:description] %></span>
        <% if @from_cache %>
          <span class="bg-yellow-200 text-yellow-800 px-2 py-1 rounded text-sm font-medium">Cached</span>
        <% end %>
      </div>
      <div class="flex gap-6 text-sm text-gray-600">
        <div class="flex items-center gap-1">
          <%# Droplets Icon %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2.5a5.5 5.5 0 00-5.5 5.5c0 3.333 5.5 9 5.5 9s5.5-5.667 5.5-9A5.5 5.5 0 0012 2.5z" />
          </svg>
          <span>Humidity: <%= @current[:humidity] %>%</span>
        </div>
        <div class="flex items-center gap-1">
          <%# Wind Icon %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12h12M3 8h9M3 16h8" />
          </svg>
          <span>Wind: <%= @current[:wind] %></span>
        </div>
      </div>
    </div>
  </div>
</div>