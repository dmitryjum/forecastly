<div class="grid grid-cols-2 md:grid-cols-5 gap-4">
  <% @days.each do |day| %>
    <div class="text-center p-4 rounded-lg hover:bg-gray-50 transition-colors">
      <div class="font-medium text-gray-700 mb-3"><%= day[:name] %></div>
      <div class="flex justify-center mb-3">
        <div class="mx-auto mb-1 mt-1">
          <%= image_tag icon_for(day[:description]), class: "inline h-12 w-12" if day[:description] %>
        </div>
      </div>
      <div class="text-sm text-gray-600 mb-2 min-h-[2.5rem] flex items-center justify-center">
        <%= day[:description] %>
      </div>
      <div id="<%= day[:name].parameterize %>"
          data-original="<%= day[:temp] %>"
          data-temperature-target="value"
          class="text-xl font-semibold text-gray-800">
        <span><%= day[:temp] %></span>Â°
      </div>
    </div>
  <% end %>
</div>